#!/usr/bin/env python3

# one sample is 0.5 us
# one bit is 312 us (625 samples)
# one nibble is 1250 us
#
# 10k us is 8 nibbles
#
# 0000aaaa aaaaaaaa
# 00000000 [Pause: 19838 samples, 10k us]
# e8e8e8e8 e8e8e8ee
# 00000000 [Pause: 19888 samples, 10k us]
# e8e8e8e8 e8e8e8ee
# 00000000 [Pause: 19818 samples, 10k us]
# e8e8e8e8 e8e8e8ee

with open('/dev/ttyACM0', 'w') as serial:
    print('tx0000aaaa', file=serial)
    print('txaaaaaaaa', file=serial)
    print('tx0', file=serial)

    print('txe8e8e8e8', file=serial)
    print('txe8e8e8ee', file=serial)
    print('tx0', file=serial)

    print('txe8e8e8e8', file=serial)
    print('txe8e8e8ee', file=serial)
    print('tx0', file=serial)

    print('txe8e8e8e8', file=serial)
    print('txe8e8e8ee', file=serial)
